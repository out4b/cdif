{
  "configId": 1,
  "specVersion": {
    "major": 1,
    "minor": 0
  },
  "device": {
    "deviceType": "urn:cdif-net:device:ONVIFCamera:1",
    "friendlyName": "",
    "manufacturer": "",
    "modelName": "",
    "userAuth": "yes",
    "serviceList": {
      "urn:cdif-net:serviceID:ONVIFMediaService": {
        "serviceType": "urn:cdif-net:service:ONVIFMedia:1",
        "actionList": {
          "GetStreamUri": {
            "argumentList": {
              "streamType": {
                "direction": "in",
                "relatedStateVariable": "streamType"
              },
              "transport": {
                "direction": "in",
                "relatedStateVariable": "transport"
              },
              "streamUri": {
                "direction": "out",
                "retval": true,
                "relatedStateVariable": "streamUri"
              }
            }
          }
        },
        "serviceStateTable": {
          "streamType": {
            "sendEvents": "no",
            "dataType": "string",
            "allowedValueList": [
              "RTP-Unicast",
              "RTP-Multicast",
              "MJPEG-Unicast"
            ],
            "defaultValue": "RTP-Unicast"
          },
          "transport": {
            "sendEvents": "no",
            "dataType": "string",
            "allowedValueList": [
              "UDP",
              "TCP",
              "RTSP",
              "HTTP",
              "WebSocket"
            ],
            "defaultValue": "WebSocket"
          },
          "streamUri": {
            "sendEvents": "yes",
            "dataType": "url"
          }
        }
      },
      "urn:cdif-net:serviceID:ONVIFPTZService": {
        "serviceType": "urn:cdif-net:service:ONVIFPTZ:1",
        "actionList": {
          "absoluteMove": {
            "argumentList": {
              "pan": {
                "direction": "in",
                "relatedStateVariable": "pan"
              },
              "tilt": {
                "direction": "in",
                "relatedStateVariable": "tilt"
              },
              "zoom": {
                "direction": "in",
                "relatedStateVariable": "zoom"
              }
            }
          },
          "stop": {
            "argumentList": {
              "panTilt": {
                "direction": "in",
                "relatedStateVariable": "stopPanTilt"
              },
              "zoom": {
                "direction": "in",
                "relatedStateVariable": "stopZoom"
              }
            }
          }
        },
        "serviceStateTable": {
          "pan": {
            "sendEvents": "yes",
            "dataType": "float",
            "allowedValueRange": {
              "minimum": -1,
              "maximum": 1
            },
            "defaultValue": 0
          },
          "tilt": {
            "sendEvents": "yes",
            "dataType": "float",
            "allowedValueRange": {
              "minimum": -1,
              "maximum": 1
            },
            "defaultValue": 0
          },
          "zoom": {
            "sendEvents": "yes",
            "dataType": "int",
            "allowedValueRange": {
              "minimum": -1,
              "maximum": 1,
              "step": 1
            },
            "defaultValue": 0
          },
          "stopPanTilt": {
            "sendEvents": "no",
            "dataType": "boolean",
            "defaultValue": true
          },
          "stopZoom": {
            "sendEvents": "no",
            "dataType": "boolean",
            "defaultValue": true
          }
        }
      }
    }
  }
}
